[bar]
bin = "lemonbar"
name = "testbar"
# format is required, it lists the blocks to display
format = "vol | dt | temp"
# dock defines bar's position: 'top' or 'bottom'
dock = bottom
# height of the bar in pixel
height = 24
# default font color
foreground = "#e0e2e4"
# default background color for the entire bar
background = "#293134"
# display underline? true or false
underline = true
# display overline? true or false
overline = false
# thickness of the line(s) in pixel
line-width = 3
# color of the line(s), if any
line = "#678cb1"
# defines a different font color for labels
label-fg = "#7d8c93"
# string to display in front of every block
prefix = " " 
# string to display after every block
suffix = " "
# distance between any two blocks in pixel
offset = 8
# default font to use
font = 6x13
label-font = "-wuncon-siji-medium-r-normal--10-100-75-75-c-80-iso10646-1"

[dt]
bin="~/.local/bin/candies/datetime -m"
live=true
mouse-left=xclock

[temp]
offset=-8
;bin="~/.config/succade/blocks/temp"
label="î€› "
padding=5
reload=8

[vol]
bin="~/.config/succade/blocks/volume"
label="VOL " 
trigger="stdbuf -oL /usr/sbin/alsactl monitor"
padding=5
mouse-left="amixer set Master toggle"
scroll-up="amixer set Master 5%+"
scroll-down="amixer set Master 5%-"
